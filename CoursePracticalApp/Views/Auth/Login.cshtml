@{
    Layout = "_LoginLayout";
}

@model LoginVM

<div class="login-container">
    <!-- Logo and Title -->
    <div class="logo-container">
        <div class="logo-icon">
            <i class="bi bi-heart-pulse"></i>
        </div>
        <h1 class="logo-title">Clinic Management System</h1>
        <p class="logo-subtitle">Sign in to access your dashboard</p>
    </div>

    <!-- Login Form -->
    <div class="login-card">
        <form id="loginForm" method="post">
            <!-- Role Selection -->
            <div class="mb-4">
                <label class="form-label">Select Role</label>
                <input type="hidden" asp-for="UserRole" id="userRoleInput" value="Doctors" />
                <div class="role-buttons">
                    <button type="button" class="role-btn active" data-role="Doctors">Doctor</button>
                    <button type="button" class="role-btn" data-role="Receptionists">Receptionist</button>
                    <button type="button" class="role-btn" data-role="Admins">Admin</button>
                </div>
                <span class="text-danger" asp-validation-for="UserRole"></span>
            </div>

            <!-- Username Input -->
            <div class="mb-4">
                <label asp-for="Username" class="form-label">Username</label>
                <div class="input-wrapper">
                    <i class="bi bi-person input-icon"></i>
                    <input  asp-for="Username"
                            class="form-control"
                            placeholder="Enter your username">
                </div>
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-wrapper">
                    <i class="bi bi-lock input-icon"></i>
                    <input  asp-for="Password"
                            class="form-control"
                            placeholder="••••••••">
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">
                Sign In
            </button>

            <!-- Demo Credentials -->
            <div class="hint-note">
                <p>
                    <strong>Hint:</strong> Use your username and password :)
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script>
        const roleButtons = document.querySelector('.role-buttons');
        const userRoleInput = document.getElementById('userRoleInput');
        let activeButton = document.querySelector('.role-btn.active'); // Store reference

        roleButtons.addEventListener('click', function(e) {
            if (e.target.classList.contains('role-btn')) {
                // Remove active from previous button
                if (activeButton) {
                    activeButton.classList.remove('active');
                }

                // Add active to clicked button
                e.target.classList.add('active');
                activeButton = e.target; // Update reference

                // Update hidden input
                userRoleInput.value = e.target.getAttribute('data-role');
            }
        });
    </script>

}