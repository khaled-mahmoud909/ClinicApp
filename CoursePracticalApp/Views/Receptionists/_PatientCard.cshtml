@model List<PatientVM>

<div class="modern-results-list" id="patientResults">
    @foreach (var patient in Model)
    {
        <!-- Patient Card 1 -->
        <div class="result-card patient-card">
            <div class="card-indicator status-@(patient.IsActive ? "active" : "inactive")"></div>
            <div class="result-card-body">
                <div class="result-main-section">
                    <div class="result-icon-wrapper">
                        <div class="patient-avatar-result">
                            <i class="bi bi-person-circle"></i>
                        </div>
                    </div>

                    <div class="result-content-section">
                        <div class="result-header-row">
                            <h6 class="result-main-title">@patient.FullName</h6>
                            <div class="status-badge-modern @(patient.IsActive ? "active" : "inactive")">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>@(patient.IsActive ? "Active Patient" : "Inactive")</span>
                            </div>
                        </div>

                        <div class="result-details-grid">
                            <div class="detail-item">
                                <i class="bi bi-person-vcard"></i>
                                <div class="detail-content">
                                    <span class="detail-label">Patient ID</span>
                                    <span class="detail-value">@("#P" + patient.Id.ToString("000000"))</span>
                                </div>
                            </div>
                            <div class="detail-item">
                                <i class="bi bi-telephone"></i>
                                <div class="detail-content">
                                    <span class="detail-label">Phone</span>
                                    <span class="detail-value">@patient.PhoneNumber</span>
                                </div>
                            </div>
                            <div class="detail-item">
                                <i class="bi bi-envelope"></i>
                                <div class="detail-content">
                                    <span class="detail-label">Email</span>
                                    <span class="detail-value">@patient.Email</span>
                                </div>
                            </div>
                            <div class="detail-item">
                                <i class="bi bi-calendar3"></i>
                                <div class="detail-content">
                                    <span class="detail-label">Date Of Birth</span>
                                    <span class="detail-value">@patient.DateOfBirth - Age: @patient.Age</span>
                                </div>
                            </div>
                        </div>

                        <div class="patient-stats-row">
                            <div class="stat-card">
                                <i class="bi bi-calendar-check"></i>
                                <div class="stat-info">
                                    <span class="stat-value">@patient.TotalAppointments</span>
                                    <span class="stat-label">Total Appointments</span>
                                </div>
                            </div>
                            <div class="stat-card">
                                <i class="bi bi-clock-history"></i>
                                <div class="stat-info">
                                    <span class="stat-value">@patient.LastAppintment</span>
                                    <span class="stat-label">Last Visit</span>
                                </div>
                            </div>
                            @*                                                         <div class="stat-card">
                                                            <i class="bi bi-file-earmark-medical"></i>
                                                            <div class="stat-info">
                                                                <span class="stat-value">3</span>
                                                                <span class="stat-label">Medical Records</span>
                                                            </div>
                                                        </div> *@
                        </div>
                    </div>
                </div>

                <div class="result-actions-section">
                    <button class="action-btn action-btn-primary">
                        <i class="bi bi-eye"></i>
                        <span>View Profile</span>
                    </button>
                    <button class="action-btn action-btn-success">
                        <i class="bi bi-calendar-plus"></i>
                        <span>Book</span>
                    </button>
                    <button class="action-btn action-btn-icon">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>
