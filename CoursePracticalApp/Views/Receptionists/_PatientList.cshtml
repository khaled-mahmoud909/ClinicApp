@model List<PatientVM>

<div class="list-view-container" id="patientListResults">
    @foreach (var patient in Model)
    {
        <div class="result-list-item">
            <div class="list-item-indicator status-@(patient.IsActive ? "active" : "inactive")"></div>

            <div class="list-item-avatar">
                <i class="bi bi-person-circle"></i>
            </div>

            <div class="list-item-main">
                <div class="list-item-header">
                    <h6 class="list-item-title">@patient.FullName</h6>
                    <span class="list-item-badge @(patient.IsActive ? "active" : "inactive")">
                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i>
                        @(patient.IsActive ? "Active" : "Inactive")
                    </span>
                </div>

                <div class="list-item-details">
                    <div class="list-detail">
                        <i class="bi bi-person-vcard"></i>
                        <span><strong>@("#P" + patient.Id.ToString("000000"))</strong></span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-telephone"></i>
                        <span>@patient.PhoneNumber</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-envelope"></i>
                        <span>@patient.Email</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-calendar3"></i>
                        <span>Age: @patient.Age</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-calendar-check"></i>
                        <span>@patient.TotalAppointments appointments</span>
                    </div>
                </div>
            </div>

            <div class="list-item-actions">
                <button class="list-action-btn primary" title="View Profile">
                    <i class="bi bi-eye"></i>
                </button>
                <button class="list-action-btn" title="Book Appointment" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                    <i class="bi bi-calendar-plus"></i>
                </button>
                <button class="list-action-btn" title="More">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
            </div>
        </div>
    }
</div>