@model List<AppointmentVM>

<div class="list-view-container" id="appointmentListResults">
    @foreach (var appointment in Model)
    {
        <div class="result-list-item">
            <div class="list-item-indicator status-@appointment.Status"></div>

            <div class="list-item-icon">
                <i class="bi bi-calendar-check"></i>
            </div>

            <div class="list-item-main">
                <div class="list-item-header">
                    <h6 class="list-item-title">@appointment.Type - @appointment.DoctorName</h6>
                    <span class="list-item-badge @appointment.Status">
                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i>
                        @appointment.Status
                    </span>
                </div>

                <div class="list-item-details">
                    <div class="list-detail">
                        <i class="bi bi-person-circle"></i>
                        <span><strong>@appointment.PatientName</strong> @("#P" + appointment.PatientId.ToString("000000"))</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-calendar3"></i>
                        <span>@appointment.DateTime</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-clock"></i>
                        <span>@appointment.Duration</span>
                    </div>
                    <div class="list-detail">
                        <i class="bi bi-telephone"></i>
                        <span>@appointment.PatientPhone</span>
                    </div>
                </div>
            </div>

            <div class="list-item-actions">
                <button class="list-action-btn primary" title="View Details">
                    <i class="bi bi-eye"></i>
                </button>
                <button class="list-action-btn" title="Edit">
                    <i class="bi bi-pencil"></i>
                </button>
                <button class="list-action-btn" title="More">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
            </div>
        </div>
    }
</div>