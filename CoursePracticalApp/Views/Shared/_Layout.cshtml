<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoursePracticalApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UserManagement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ReceptionistDashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/BookAppointment.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/RegisterPatient.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Toast.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Search.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MyAppoitments.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoursePracticalApp.styles.css" asp-append-version="true" />
</head>
<body style="height: 100%; margin: 0; overflow: hidden;">

    @* The main Flexbox container that holds the Sidebar and the Content *@
    <div class="d-flex" id="wrapper">

        @* 1. The Sidebar (Stays on the left, full height) *@
        <partial name="_Sidebar" />

        @* 2. Page Content Wrapper (Takes the remaining width) *@
        <div id="page-content-wrapper" class="flex-grow-1 d-flex flex-column" style="margin-left: 280px; height: 100vh; overflow-y: auto;">

            @* 2a. The Navbar (Sits at the top of the content area) *@
            <header style="position: sticky; top: 0; z-index: 999; background-color: white;">
                <partial name="_Navbar" />
            </header>

            @* 2b. The Main Page Content *@
            <main role="main" class="flex-shrink-0 p-3">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div> @* End of #wrapper *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
