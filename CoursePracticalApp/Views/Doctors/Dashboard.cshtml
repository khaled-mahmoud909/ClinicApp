@model DoctorAppointmentsVM

<div class="container">
    <div class="dashboard-header mb-4">
        <div>
            <h4 class="mb-2 fw-bold">Doctor Dashboard</h4>
            <h6 class="text-muted mb-1">Welcome back, @Model.doctor.AppUser. <span class="text-dark fw-semibold"></span></h6>
            <span class="badge bg-light text-dark border">
                <i class="bi bi-heart-pulse me-1"></i>
                @Model.doctor.Speciality
            </span>
        </div>
    </div>

    <partial name="_DashboardStatsCards" model="Model.appointmentsCountVm" />

    <div class="row">
        <div class="col-12">
            <div class="schedule-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1 fw-bold">
                            <i class="bi bi-calendar-check text-primary me-2"></i>
                            Today's Schedule
                        </h5>
                        <p class="text-muted small mb-0">Monday, November 24, 2025</p>
                    </div>
                </div>
                <div class="card-body bg-white">
                    <!-- Empty State -->
                    <div class="empty-schedule text-center py-5 d-none">
                        <div class="empty-icon mb-3">
                            <i class="bi bi-calendar-x"></i>
                        </div>
                        <h6 class="text-muted mb-2">No appointments scheduled for today</h6>
                        <p class="text-muted small mb-3">Your schedule is clear. Time to relax or catch up on paperwork!</p>
                    </div>

                    <!-- Appointment List (Hidden by default, show when there are appointments) -->
                    <div class="appointment-list">
                        <!-- Single Appointment Item -->
                        <div class="appointment-item">
                            <div class="appointment-time">
                                <span class="time-label">09:00 AM</span>
                                <div class="time-line"></div>
                            </div>
                            <div class="appointment-content">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1 fw-semibold">John Doe</h6>
                                        <p class="text-muted small mb-0">
                                            <i class="bi bi-clipboard-pulse me-1"></i>
                                            Regular Checkup
                                        </p>
                                    </div>
                                    <span class="badge bg-warning-subtle text-warning">Pending</span>
                                </div>
                                <div class="appointment-meta">
                                    <span class="meta-item">
                                        <i class="bi bi-clock me-1"></i>
                                        30 mins
                                    </span>
                                    <span class="meta-item">
                                        <i class="bi bi-telephone me-1"></i>
                                        +1 234 567 8900
                                    </span>
                                </div>
                                <div class="appointment-actions mt-2">
                                    <button class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Complete
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil me-1"></i>
                                        Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Another Appointment Example -->
                        <div class="appointment-item">
                            <div class="appointment-time">
                                <span class="time-label">11:30 AM</span>
                                <div class="time-line"></div>
                            </div>
                            <div class="appointment-content">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1 fw-semibold">Jane Smith</h6>
                                        <p class="text-muted small mb-0">
                                            <i class="bi bi-clipboard-pulse me-1"></i>
                                            Follow-up Consultation
                                        </p>
                                    </div>
                                    <span class="badge bg-success-subtle text-success">Confirmed</span>
                                </div>
                                <div class="appointment-meta">
                                    <span class="meta-item">
                                        <i class="bi bi-clock me-1"></i>
                                        45 mins
                                    </span>
                                    <span class="meta-item">
                                        <i class="bi bi-telephone me-1"></i>
                                        +1 234 567 8901
                                    </span>
                                </div>
                                <div class="appointment-actions mt-2">
                                    <button class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Complete
                                    </button>
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil me-1"></i>
                                        Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-x-circle me-1"></i>
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>