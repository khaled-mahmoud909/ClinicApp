@model AppointmentsCountVM

<div class="row g-4">
    <div class="col-12 col-md-6 col-lg-3">
        <div class="stat-card position-relative">
            <div class="card-body bg-white">
                <h6 class="card-title text-muted mb-3">Today's Appointments</h6>
                <h2 class="mb-0 fw-bold">@Model.AppointmentsCount</h2>
                <p class="text-muted small mb-0 mt-2">
                    <i class="bi bi-calendar-day me-1"></i>
                    <span>Monday, Nov 24</span>
                </p>
            </div>
            <div class="icon-overlay bg-main" ">
                <i class="bi bi-calendar"></i>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
        <div class="stat-card position-relative">
            <div class="card-body bg-white">
                <h6 class="card-title text-muted mb-3">Completed</h6>
                <h2 class="mb-0 fw-bold">@Model.CompletedAppointmentsCount</h2>
                <p class="text-muted small mb-0 mt-2">
                    <i class="bi bi-check-circle me-1"></i>
                    <span>This month</span>
                </p>
            </div>
            <div class="icon-overlay bg-done">
                <i class="bi bi-check-circle"></i>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-3">
        <div class="stat-card position-relative">
            <div class="card-body bg-white">
                <h6 class="card-title text-muted mb-3">Upcoming</h6>
                <h2 class="mb-0 fw-bold">@Model.UpcomingAppointmentsCount</h2>
                <p class="text-muted small mb-0 mt-2">
                    <i class="bi bi-clock-history me-1"></i>
                    <span>Next 7 days</span>
                </p>
            </div>
            <div class="icon-overlay bg-upcoming">
                <i class="bi bi-clock-history"></i>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6 col-lg-3">
        <div class="stat-card position-relative">
            <div class="card-body bg-white">
                <h6 class="card-title text-muted mb-3">Cancelled</h6>
                <h2 class="mb-0 fw-bold">@Model.CanceledAppointmentsCount</h2>
                <p class="text-muted small mb-0 mt-2">
                    <i class="bi bi-x-circle me-1"></i>
                    <span>This month</span>
                </p>
            </div>
            <div class="icon-overlay bg-cancelled">
                <i class="bi bi-x-circle"></i>
            </div>
        </div>
    </div>
</div>